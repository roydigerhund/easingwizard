{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "inputs": ["src/**", "app/**", "*.ts", "*.tsx", "*.js", "*.jsx", "package.json"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**", "app/**", "*.ts", "*.tsx", "tsconfig.json", "package.json"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "generate": {
      "dependsOn": ["^build"],
      "outputs": ["src/generated/**"],
      "inputs": ["scripts/**", "src/**", "package.json"]
    }
  }
}
